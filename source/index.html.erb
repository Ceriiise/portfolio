<!-- skills -->
<div class="container d-flex justify-content-center" id="skills">
  <div class="row">

    <% data.skills.each do |skill| %>
      <div class="col-12 col-lg-4">
        <a href='<%= skill.id %>' class='skill-link'>
          <div class="skill text-center d-flex justify-content-center align-self-stretch flex-column">
            <img src= "<%= skill.img %>" alt="">
            <div class="skill-info">
              <h3><%= skill.name %></h3>
              <p><%= skill.text %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>

  </div>
</div>

<!-- projects -->
<% data.projects.each do |project| %>
  <div class="container projects" id='<%= project.id %>'>
    <div class="project-skill">
      <h2><%= project.skill %></h2>
    </div>

    <div class="description bg-white align-self-end">
      <div class="description-title">
        <h3><%= project.title %></h3>
      </div>
      <div class="description-info">
        <p><%= project.text %></p>
      </div>
    </div>

    <div class="project-link">
      <a href='<%= project.link %>' target="_blank">
        <img src='<%= project.img %>' alt="">
      </a>
    </div>
  </div>
<% end %>

