title: Philippine Berton
---


<!-- home-me -->
<div class="container profil">
  <div class="bloc-me d-flex justify-content-center flex-column text-center">
    <span>Bonjour, je suis Philippine</span>
    <span>une développeuse web freelance</span>
    <span>vivant à Nancy / Paris.</span>
  </div>
</div>

<!-- skills -->
<div class="container">
  <div class="bloc-skills d-flex justify-content-center align-items-center">
    <div class="skills d-flex align-items-center">

      <% data.skills.each do |skill| %>
        <a href='<%= skill.id %>' class='skill-link'>
            <div class="skill bg-white text-center d-flex justify-content-center flex-column">
              <img src= "<%= skill.img %>" alt="">
              <div class="skill-info">
                <h3><%= skill.name %></h3>
                <p><%= skill.text %></p>
              </div>
            </div>
          </a>
      <% end %>

    </div>
  </div>
</div>

<!-- projects -->
<% data.projects.each do |project| %>
  <div class="container" id='<%= project.id %>'>
    <div class="project-skill">
      <h1><%= project.skill %></h1>
    </div>

    <div class="bloc-project d-flex align-items-center">
      <div class="project d-flex align-items-stretch">
        <div class="project-content bg-white align-self-end">
          <div class="project-title">
            <h3><%= project.title %></h3>
          </div>
          <div class="project-info">
            <p><%= project.text %></p>
          </div>
        </div>
        <a href='<%= project.link %>' target="_blank">
          <img src='<%= project.img %>' alt="">
        </a>
      </div>
    </div>

  </div>
<% end %>

<!-- contact -->
<div class="bloc-contact d-flex align-items-center justify-content-center flex-column" id="contact">
  <div class="contact-message">
    <a href="mailto:phi.berton@hotmail.fr">
      <div class="message-front text-center">
        <p>Envoyez-moi un mail, appelez-moi ou</p>
        <p>allons prendre un café pour parler</p>
        <p>de votre projet.</p>
      </div>
    </a>
    <div class="message-back">
      <h1>Vous voulez</br>
      travailler</br>
      avec moi ?</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="contact d-flex align-items-center justify-content-between">
    <div class="contact-details">
      <p>Philippine Berton</p>
      <p>phi.berton@hotmail.fr</p>
